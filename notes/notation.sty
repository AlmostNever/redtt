\newcommand\Mute[1]{
  {\color{SlateGray}#1}
}

\newcommand\TBind[1]{
  \Mute{\lbrace}#1\Mute{\rbrace}
}

\newcommand\VLam[1]{
  \FmtVal{\lambda\FmtClo{#1}}
}

\newcommand\Rst[2]{
  \FmtRst{#1}^*\FmtFam{#2}
}


\newcommand\VPi[2]{
  \FmtVal{\Pi\Parens*{\FmtFam{#1}, \FmtClo{#2}}}
}

\newcommand\FmtClo[1]{
  {\normalcolor #1}%
}

\newcommand\FmtTm[1]{
  {\color{MidnightBlue}#1}%
}

\newcommand\FmtVal[1]{
  {\color{Red}#1}%
}

\newcommand\FmtFam[1]{
  {\color{Purple}#1}%
}

\newcommand\FmtRst[1]{
  {\color{Green}#1}%
}

\newcommand\VClo[3]{
  \langle \FmtTm{#1},\FmtVal{#2},\FmtRst{#3} \rangle
}

\newcommand\Fam[2]{
  \FmtFam{\lbrack\FmtRst{#1}\rbrack\ \FmtVal{#2}}
}

\newcommand\TLam[1]{
  \FmtTm{
    \Parens{
      \lambda\TBind{#1}
    }
  }
}

\newcommand\TPi[2]{
  \FmtTm{
    \Parens{
      {\Pi}\; {#1}\ \TBind{#2}
    }
  }
}

\newcommand\TApp[2]{
  \FmtTm{\Parens{#1\ #2}}
}

\newcommand\SemApp[2]{
  \FmtFam{
    \FmtFam{#1} \mathbin{@} \FmtFam{#2}
  }
}

\newcommand\TVar[1]{
  \FmtTm{x_{#1}}
}

\newcommand{\Alert}[1]{%
  \colorbox{DarkSlateGray!20}{$\displaystyle#1$}
}

\newcommand{\Hole}[1]{%
  \colorbox{Red!30}{\textit{#1}}
}

\newcommand\Eq[2]{#1=#2}
\newcommand\NotEq[2]{#1\not=#2}

\newcommand\DimDelete{\maltese}

